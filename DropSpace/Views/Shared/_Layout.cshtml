@using DropSpace.Manager
@using DropSpace.Models.Data
@using System.Security.Claims
@inject SessionManager SessionManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DropSpace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DropSpace.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.6.0-web/css/all.min.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
</head>
<body class="fullscreen flex-column flex-grow-0" style="display: flex;">
    <header>
        <nav class="navbar navbar-dark bg-black">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">DropSpace</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Переключить навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Ваши сессии</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Закрыть"></button>
                    </div>
                    <div class="offcanvas-body d-flex flex-column">
                        <ul class="navbar-nav flex-grow-1 pe-3 d-flex flex-column gap-2">
                            @foreach (Session item in (List<Session>)SessionManager.GetAllSessions(User.FindFirstValue(ClaimTypes.NameIdentifier)!))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-dark w-100" style="text-align: left;" asp-controller="Session" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                                </li>
                            }
                        </ul>
                        <div>
                            <hr />
                            <form method="post" asp-action="Create" asp-controller="Session">
                                <button type="submit" class="btn btn-dark w-100">Добавить сессию</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div class="flex-grow-1 @ViewData["ContainerClasses"]">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted flex-grow-0">
        <div class="container">
            &copy; 2024 - DropSpace - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>